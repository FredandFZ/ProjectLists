<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.groupproject.mapper.UserMapper">
    <insert id="addUser">
        insert into user(name, gender, birthday, phone_number, create_time, update_time)
        values (#{name}, #{gender}, #{birthday}, #{phoneNumber}, #{createTime}, #{updateTime})
    </insert>
    <insert id="addPassword">
        insert into password(password, user_id) values(#{password}, #{userId})
    </insert>

    <update id="updateUser">
        update user
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="birthday != null">birthday = #{birthday},</if>
            <if test="phoneNumber != null and phoneNumber != ''">phone_number = #{phoneNumber},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="deleteUser">
        delete from user
        <where>
            id = #{id}
        </where>
    </delete>
    <select id="selectUserByName" resultType="com.example.groupproject.model.User">
        select * from user
        <where>
            name = #{username}
        </where>
    </select>
    <select id="selectPasswordByUserId" resultType="com.example.groupproject.model.Password">
        select * from password
        <where>
            user_id = #{userId}
        </where>
    </select>
    <select id="selectUserById" resultType="com.example.groupproject.model.User">
        select * from user
        <where>id = #{userId}</where>
    </select>


</mapper>