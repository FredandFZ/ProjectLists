<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.groupproject.mapper.ShopMapper">

    <insert id="addShop">
        insert into shop(shop_type, name, user_id, create_time, update_time)
        values(#{shopType}, #{name}, #{userId}, #{createTime}, #{updateTime})
    </insert>
    <update id="updateShop">
        update shop
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="shopType != null">shop_type = #{shopType},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        <where>id = #{id}</where>
    </update>
    <delete id="deleteShop">
        delete from shop
        <where>
            id = #{id}
        </where>
    </delete>
    <select id="listAllShop" resultType="com.example.groupproject.model.Shop">
        select * from shop
    </select>
    <select id="selectShopById" resultType="com.example.groupproject.model.Shop">
        select * from shop
        <where>
            id = #{id}
        </where>
    </select>
    <select id="listShop" resultType="com.example.groupproject.model.Shop">
        select * from shop
        <where>
            <if test="name != null and name != ''">name = #{name}</if>
            <if test="shopType != null">and shop_type = #{shopType}</if>
        </where>
    </select>
</mapper>